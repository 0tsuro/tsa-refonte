{
  "buildCommand": "echo 'Static site ready for deployment'",
  "outputDirectory": ".",
  "installCommand": "echo 'No dependencies required'",
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "headers": [
    {
      "source": "/(.*)\\.(js|css|ttf|ttx|woff|woff2|eot|svg|gif|ico|jpg|jpeg|png|webp)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.html$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}
