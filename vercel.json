{
  "buildCommand": "echo 'Static site ready'",
  "outputDirectory": ".",
  "installCommand": "echo 'No install needed'",
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/fr",
      "destination": "/fr/index.html"
    },
    {
      "source": "/en",
      "destination": "/en/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|ttf|ttx|woff|woff2|eot|svg|gif|ico|jpg|jpeg|png|webp)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.html$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
